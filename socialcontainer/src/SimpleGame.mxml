<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   creationComplete="init();"
			   backgroundColor="0x00789F"
			   frameRate="41"
			   xmlns:mx="library://ns.adobe.com/flex/halo" width="730" height="730" xmlns:friendsPanel="ua.com.syo.simplegame.view.components.friendsPanel.*" xmlns:targets="ua.kiev.djm.core.log.targets.*" currentState="expand" xmlns:mx1="library://ns.adobe.com/flex/mx">
	
	<fx:Script>
		<![CDATA[
			import ua.com.syo.simplegame.model.Model;
			private var externalSwf:Object;
			
			public function init():void {
				Model.instance.init();
			}
			
			private function loadCompleteHandler(event:Event):void {
				externalSwf = event.target.content;
			}				

			private function movePS():void {
				externalSwf.connectTest();
			}
		]]>
	</fx:Script>
	<s:states>
		<s:State name="expand"/>
		<s:State name="collapse"/>
	</s:states>
	
	<s:Group width="100%" height="100%">
		<mx1:SWFLoader id="gameLoader" width="100%" height="100%"  source="Main.swf" complete="loadCompleteHandler(event)"/>
		<friendsPanel:FriendsPanel id="friendPanel" x="4" bottom="4" x.collapse="4" bottom.collapse="-120"/>
		<s:Button id="hideButton" label="v" height="30" width="30" click="{movePS(); if (currentState != 'collapse') {currentState = 'collapse'; hideButton.label = '^'} else {currentState = 'expand'; hideButton.label = 'v' }}"  x="693" y="693"/>
	</s:Group>
	
	<targets:FlexLogPanel />
	<s:transitions>
		<s:Transition id="myTransition" fromState="expand" toState="collapse">
			<s:Parallel id="t1" targets="{[friendPanel]}">
				<mx1:Move  duration="200"/>
			</s:Parallel>
		</s:Transition>
		<s:Transition id="myTransition1" fromState="collapse" toState="expand">
			<s:Parallel id="t2" targets="{[friendPanel]}">
				<mx1:Move  duration="200"/>
			</s:Parallel>
		</s:Transition>
	</s:transitions>

</s:Application>
